<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/v"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/home_toolbar"
        android:background="@color/colorPrimary"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Flatlet"
            android:layout_gravity="center"
            android:id="@+id/toolbar_title"
            android:textSize="26sp"
            android:textColor="#ffffff"/>
    </android.support.v7.widget.Toolbar>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/home_toolbar">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:id="@+id/searchcard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="10dp"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/hostel_title_recycler_card"
                    android:text="@string/city_name"
                    android:textSize="@dimen/home_fragment_text" />

                <EditText
                    android:id="@+id/search_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/home_fragment_searchbar_height"
                    android:layout_marginTop="20dp"
                    android:padding="4dp"
                    android:drawablePadding="5dp"
                    android:background="@drawable/round"
                    android:drawableStart="@drawable/ic_search_black_24dp"
                    android:focusable="false"
                    android:hint="@string/enter_locality_here"
                    />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardview3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/searchcard"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="2dp"
            android:padding="5dp">

            <ImageView
                android:id="@+id/exploreNowButton"
                android:layout_width="match_parent"
                android:layout_height="@dimen/home_fragment_card_height"
                android:layout_alignParentStart="true"
                android:layout_margin="5dp"
                android:scaleType="centerCrop"
                android:alpha="0.87"
                android:src="@drawable/explorenow" />

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:id="@+id/cardViewReview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cardview3"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="2dp">

            <ImageView
                android:id="@+id/imageRateButton"
                android:layout_width="match_parent"
                android:layout_height="@dimen/home_fragment_card_height"
                android:scaleType="centerCrop"
                android:src="@drawable/ratehostelp"
                android:alpha="0.87"/>

        </android.support.v7.widget.CardView>

    </RelativeLayout>

</ScrollView>



</RelativeLayout>